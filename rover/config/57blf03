
# axis1 57BLF03
odrv0.axis1.motor.config.pole_pairs = 4
odrv0.axis1.motor.config.resistance_calib_max_voltage = 4
odrv0.axis1.motor.config.requested_current_range = 25 #Requires config save and reboot
odrv0.axis1.motor.config.current_control_bandwidth = 100
odrv0.axis1.motor.config.torque_constant = 0.066 #8.27 # <measured KV>
odrv0.axis1.motor.config.current_lim = 60

odrv0.axis1.encoder.config.mode = ENCODER_MODE_HALL
odrv0.axis1.encoder.config.cpr = 6* odrv0.axis1.motor.config.pole_pairs
odrv0.axis1.encoder.config.bandwidth = 100

odrv0.axis1.config.watchdog_timeout = 5
odrv0.axis1.config.enable_watchdog = False

odrv0.axis1.controller.config.pos_gain = 1
odrv0.axis1.controller.config.vel_gain = 0.02 * odrv0.axis1.motor.config.torque_constant * odrv0.axis1.encoder.config.cpr
odrv0.axis1.controller.config.vel_integrator_gain = 0.1 * odrv0.axis1.motor.config.torque_constant * odrv0.axis1.encoder.config.cpr
odrv0.axis1.controller.config.vel_limit = 3000 #round per s
odrv0.axis1.controller.config.control_mode = CONTROL_MODE_VELOCITY_CONTROL


# axis1 57BLF02
odrv0.axis0.motor.config.pole_pairs = 4
odrv0.axis0.motor.config.resistance_calib_max_voltage = 4
odrv0.axis0.motor.config.requested_current_range = 25 #Requires config save and reboot
odrv0.axis0.motor.config.current_control_bandwidth = 100
odrv0.axis0.motor.config.torque_constant = 0.066 #8.27 # <measured KV>
odrv0.axis0.motor.config.current_lim = 60

odrv0.axis0.encoder.config.mode = ENCODER_MODE_HALL
odrv0.axis0.encoder.config.cpr = 6* odrv0.axis1.motor.config.pole_pairs
odrv0.axis0.encoder.config.bandwidth = 100

odrv0.axis0.config.watchdog_timeout = 5
odrv0.axis0.config.enable_watchdog = False

odrv0.axis0.controller.config.pos_gain = 1
odrv0.axis0.controller.config.vel_gain = 0.02 * odrv0.axis1.motor.config.torque_constant * odrv0.axis1.encoder.config.cpr
odrv0.axis0.controller.config.vel_integrator_gain = 0.1 * odrv0.axis1.motor.config.torque_constant * odrv0.axis1.encoder.config.cpr
odrv0.axis0.controller.config.vel_limit = 3000 #round per s
odrv0.axis0.controller.config.control_mode = CONTROL_MODE_VELOCITY_CONTROL


odrv0.save_configuration()
odrv0.reboot()



# calibration
odrv0.axis1.requested_state = AXIS_STATE_MOTOR_CALIBRATION
odrv0.axis1.motor.config.pre_calibrated = True

odrv0.axis1.requested_state = AXIS_STATE_ENCODER_OFFSET_CALIBRATION
odrv0.axis1.encoder.config.pre_calibrated = True

# calibration
odrv0.axis0.requested_state = AXIS_STATE_MOTOR_CALIBRATION
odrv0.axis0.motor.config.pre_calibrated = True

odrv0.axis0.requested_state = AXIS_STATE_ENCODER_OFFSET_CALIBRATION
odrv0.axis0.encoder.config.pre_calibrated = True

odrv0.save_configuration()
odrv0.reboot()

#test
odrv0.axis1.requested_state = AXIS_STATE_CLOSED_LOOP_CONTROL
odrv0.axis1.controller.input_vel = 5
# Your motor should spin here
odrv0.axis0.requested_state = AXIS_STATE_CLOSED_LOOP_CONTROL
odrv0.axis0.controller.input_vel = 5


odrv0.axis1.controller.input_vel = 0
odrv0.axis1.requested_state = AXIS_STATE_IDLE
odrv0.axis0.controller.input_vel = 0
odrv0.axis0.requested_state = AXIS_STATE_IDLE

#dump errors
dump_errors(odrv0)
